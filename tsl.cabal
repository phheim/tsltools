    , filepath >= 1.4
    , parsec >=3.1
    , array >=0.5
    , mtl >=2.2
    , containers >=0.5
    , QuickCheck
    , process >= 1.6.3.0
    , ansi-terminal >= 0.6
    , fgl >= 5.6.0.0

  exposed-modules:
    TSL
    TSLCoreGenerator

  other-modules:
    TSL.Binding
    TSL.Dependency
